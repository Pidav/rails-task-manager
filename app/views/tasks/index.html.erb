
<div class="container">
  <h1>My tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <% if task.completed %>
          <input type="checkbox" name="checkbox" class="mx-2" checked>
        <% else %>
          <input type="checkbox" name="checkbox" class="mx-2" >
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
  <hr>
  <i class="fa fa-plus-square" aria-hidden="true"></i>
  <%= link_to "Add a new task", new_task_path %>
</div>
