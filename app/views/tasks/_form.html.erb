<div>
  <%= form_for(task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: "form-control"%>
    </div>
    <% if !task.new_record? %>
      <div class="form-inline mb-3">
        <%= f.check_box :completed, class: "mx-2"%>
        <%= f.label :completed %>
      </div>
    <% end %>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
</div>
