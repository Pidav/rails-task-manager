
<div class="container">
  <h1>New task</h1>
  <div>
    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <h5><%= f.label :title %></h5>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h5><%= f.label :details %></h5>
        <%= f.text_field :details %>
      </div>
      <div class="btn btn-primary">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
  <hr>
<!--   <i class="fas fa-undo-alt"></i> -->
  <%= link_to "Back to list", tasks_path %>
</div>
